<%- include('includes/head') %>
<%- include('includes/navbar') %>
    
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3">
        <h1 class="text-center">Criar conta ou fazer login</h1>
        <p class="text-center lead">Faça login ou cadastre-se</p>

        <%- include('includes/messages'); %>
        <div class="row">
            <div class="col-lg">
              
                <h4>Faça seu cadastro</h4>
                <p>Se você ainda não tem conta, cria!</p>

                <form class="form-cadastro" action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value= <%= csrfToken %>>
                    <div class="form-group">
                      <label>Seu melhor e-mail</label>
                      <input type="email" class="form-control" name="email">
                      <p id="erro-email-cadastro"></p>
                    </div>
                    <div class="form-group">
                        <label>Sue melhor senha</label>
                        <input type="password" class="form-control" name="password">
                        <p id="erro-senha-cadastro"></p>
                      </div>
                    <button type="submit" class="btn btn-primary">Criar minha conta</button>
                  </form>

            </div>

            <div class="col-lg">
                <h4>Faça seu login</h4>

                <p>Realize seu login</p>
                <form class="form-login" action="/login/login" method="POST">
                  <input type="hidden" name="_csrf" value= <%= csrfToken %>>

                    <div class="form-group">
                      <label>Seu melhor e-mail</label>
                      <input type="email" class="form-control" name="email">
  
                    </div>
                    <div class="form-group">
                        <label>Sua melhor senha</label>
                        <input type="password" class="form-control" name="password">
                      </div>
                    <button type="submit" class="btn btn-primary">Entrar</button>
                  </form>
            </div>
        </div>

      </div>

      <div class="col-lg-2"></div>
    </div>
  </div>

<%- include('includes/footer') %>

